{
    "name": "URL Shortener Chrome Extension",
    "version": "0.2",
    "description": "Shorten your long url using the t.brk.io api",    
    "icons": {
        "128": "Images/Logo.png"
    },
    "action": {
      "default_icon": "Images/Logo.png",
      "default_popup": "popup.html"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false,
        "default_icon": "Images/Logo.png"
    },
    "manifest_version": 3,
    "content_scripts": [{
        "matches": ["https://*/*", "http://*/*"],
        "js": ["lib/jquery.min.js"]
    }],
    "permissions": [
        "storage",
        "webRequest",
        "tabs"
    ],
    "host_permissions": [
        "https://t.brk.io/"
    ]
}